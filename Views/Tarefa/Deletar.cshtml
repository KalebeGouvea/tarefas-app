@model tarefas_app.Models.Tarefa;

@{
    ViewData["Title"] = "Deletar";
}

<h1>Tem certeza que deseja deletar essa tarefa?</h1>

<br><br>

<div>
    <h3>@Html.DisplayFor(x => x.Titulo)</h3>

    <p class="text-muted">Descrição:</p>
    <p>@Html.DisplayFor(x => x.Descricao)</p>

    <p class="text-muted">Data:</p>
    <p>@Html.DisplayFor(x => x.Data)</p>

    <p class="text-muted">Status:</p>
    @{
        if(Model.Status == true)
        {
            <p>Concluído</p>
        } else {
            <p>A realizar</p>
        }
    }
</div>

<div>
    <form asp-action="Deletar">
        <input type="submit" value="Deletar" class="btn btn-danger">
    </form>

    <br><br>
    <a asp-action="Index">Voltar</a>
</div>