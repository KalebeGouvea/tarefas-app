@model IEnumerable<tarefas_app.Models.Tarefa>

@{
    ViewData["Title"] = "Minhas tarefas";
}

<h1>Minhas tarefas</h1>

<p>
    <a asp-action="Criar">Nova tarefa</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Data)
                </td>
                <td>
                    <a asp-action="Concluir" asp-route-id="@item.Id" class="btn btn-primary" role="button">Concluir</a>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary" role="button">Editar</a>
                    <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-primary" role="button">Detalhes</a>
                    <a asp-action="Deletar" asp-route-id="@item.Id" class="btn btn-danger" role="button">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>